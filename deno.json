{
  "workspace": [
    "./cli",
    "./packages/*"
  ],
  "tasks": {
    "dev": "deno run -A cli/main.ts",
    "bump": "deno run -A jsr:@deno/bump-workspaces/cli"
  },
  "fmt": {
    "semiColons": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"]
    }
  }
}
