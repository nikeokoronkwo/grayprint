{
  "workspace": [
    "./cli",
    "./packages/core",
    "./packages/create",
    "./examples/*"
  ],
  "tasks": {
    "dev:cli": "deno run -A cli/main.ts",
    "dev:create": "deno run -A packages/create/main.ts",
    "build:bin": "deno compile --output bin/grayprint -A cli/main.ts",
    "build:npm": "deno run -A tools/npm.ts",
    "install": "deno install -A cli/main.ts",
    "test": "deno test -A",
    "bump": "deno run -A jsr:@deno/bump-workspaces/cli"
  },
  "fmt": {
    "semiColons": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"]
    }
  }
}
